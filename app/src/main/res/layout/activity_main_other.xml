<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainOtherActivity">

    <Button
        android:id="@+id/other_btn_web_view_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:onClick="btnOpenWeb"
        android:text="Webview打开网页"/>

    <Button
        android:id="@+id/other_btn_read_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/other_btn_web_view_1"
        android:textAllCaps="false"
        android:onClick="btnOptSms"
        android:text="读取短信列表"/>

    <Button
        android:id="@+id/other_btn_insert_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/other_btn_web_view_1"
        android:layout_toRightOf="@id/other_btn_read_sms"
        android:textAllCaps="false"
        android:onClick="btnOptSms"
        android:text="插入短信"/>

    <Button
        android:id="@+id/other_btn_read_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/other_btn_read_sms"
        android:textAllCaps="false"
        android:onClick="btnOptContact"
        android:text="读取联系人列表"/>

    <Button
        android:id="@+id/other_btn_insert_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/other_btn_insert_sms"
        android:layout_toRightOf="@id/other_btn_read_contact"
        android:textAllCaps="false"
        android:onClick="btnOptContact"
        android:text="插入联系人"/>

    <Button
        android:id="@+id/other_btn_custom_provider_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/other_btn_read_contact"
        android:textAllCaps="false"
        android:onClick="btnOptProvider"
        android:text="自定义Content Provider-插入数据"/>

    <Button
        android:id="@+id/other_btn_okhttp_get_cus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/other_btn_custom_provider_insert"
        android:textAllCaps="false"
        android:onClick="btnOptOkhttpCus"
        android:text="Okhttp-get(使用封装)"/>

    <Button
        android:id="@+id/other_btn_okhttp_post_cus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/other_btn_custom_provider_insert"
        android:layout_toRightOf="@id/other_btn_okhttp_get_cus"
        android:textAllCaps="false"
        android:onClick="btnOptOkhttpCus"
        android:text="Okhttp-post(使用封装)"/>

    <TextView
        android:id="@+id/other_sqlite_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/other_btn_okhttp_get_cus"
        android:text="sqlite3操作"/>

    <Button
        android:id="@+id/other_btn_sqlite_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/other_sqlite_tv"
        android:textAllCaps="false"
        android:onClick="btnOptSqlite"
        android:text="读取所有"/>

    <Button
        android:id="@+id/other_btn_sqlite_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/other_sqlite_tv"
        android:layout_toRightOf="@id/other_btn_sqlite_list"
        android:textAllCaps="false"
        android:onClick="btnOptSqlite"
        android:text="插入"/>

    <Button
        android:id="@+id/other_btn_sqlite_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/other_sqlite_tv"
        android:layout_toRightOf="@id/other_btn_sqlite_add"
        android:textAllCaps="false"
        android:onClick="btnOptSqlite"
        android:text="更新"/>

    <Button
        android:id="@+id/other_btn_sqlite_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/other_sqlite_tv"
        android:layout_toRightOf="@id/other_btn_sqlite_update"
        android:textAllCaps="false"
        android:onClick="btnOptSqlite"
        android:text="删除"/>

    <Button
        android:id="@+id/other_btn_sqlite_del_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/other_btn_sqlite_list"
        android:textAllCaps="false"
        android:onClick="btnOptSqlite"
        android:text="删除所有"/>



</RelativeLayout>
